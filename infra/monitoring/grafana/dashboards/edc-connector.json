{
  "annotations": {
    "list": []
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "EDC Connector Health",
      "type": "stat",
      "gridPos": { "h": 4, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "up{job=~\"edc-controlplane|edc-dataplane\"}",
          "legendFormat": "{{ job }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }
          ]
        }
      }
    },
    {
      "title": "Contract Negotiations",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "rate(edc_contract_negotiation_initiated_total[5m])",
          "legendFormat": "initiated/s"
        },
        {
          "expr": "rate(edc_contract_negotiation_confirmed_total[5m])",
          "legendFormat": "confirmed/s"
        },
        {
          "expr": "rate(edc_contract_negotiation_failed_total[5m])",
          "legendFormat": "failed/s"
        }
      ]
    },
    {
      "title": "Negotiation Success Rate",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 4 },
      "targets": [
        {
          "expr": "1 - (sum(rate(edc_contract_negotiation_failed_total[1h])) / sum(rate(edc_contract_negotiation_initiated_total[1h])))",
          "legendFormat": "success rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 0.7 },
              { "color": "green", "value": 0.9 }
            ]
          }
        }
      }
    },
    {
      "title": "Active Negotiations",
      "type": "stat",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 4 },
      "targets": [
        {
          "expr": "edc_contract_negotiation_initiated_total - edc_contract_negotiation_confirmed_total - edc_contract_negotiation_failed_total",
          "legendFormat": "in-progress"
        }
      ]
    },
    {
      "title": "Transfer Processes",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "rate(edc_transfer_process_started_total[5m])",
          "legendFormat": "started/s"
        },
        {
          "expr": "rate(edc_transfer_process_completed_total[5m])",
          "legendFormat": "completed/s"
        },
        {
          "expr": "rate(edc_transfer_process_failed_total[5m])",
          "legendFormat": "failed/s"
        }
      ]
    },
    {
      "title": "Data Transfer Volume",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        {
          "expr": "rate(edc_data_transfer_bytes_total[5m])",
          "legendFormat": "bytes/s"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "Bps" }
      }
    },
    {
      "title": "Registered Assets",
      "type": "stat",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 20 },
      "targets": [
        {
          "expr": "edc_assets_total",
          "legendFormat": "total"
        }
      ]
    },
    {
      "title": "Active Policies",
      "type": "stat",
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 20 },
      "targets": [
        {
          "expr": "edc_policies_total",
          "legendFormat": "total"
        }
      ]
    },
    {
      "title": "Contract Agreements",
      "type": "stat",
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 20 },
      "targets": [
        {
          "expr": "edc_contract_agreements_total",
          "legendFormat": "total"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["dpp-platform", "edc", "catena-x"],
  "templating": { "list": [] },
  "time": { "from": "now-6h", "to": "now" },
