  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "API Latency by Endpoint (p95)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, handler) (rate(http_request_duration_seconds_bucket{job=\"backend\"}[5m])))",
          "legendFormat": "{{ handler }}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      }
    },
    {
      "title": "Request Rate by Method",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum by (method) (rate(http_requests_total{job=\"backend\"}[5m]))",
          "legendFormat": "{{ method }}"
        }
      ]
    },
    {
      "title": "DB Connection Pool",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "sqlalchemy_pool_size",
          "legendFormat": "pool_size"
        },
        {
          "expr": "sqlalchemy_pool_checked_out",
          "legendFormat": "checked_out"
        },
        {
          "expr": "sqlalchemy_pool_overflow",
          "legendFormat": "overflow"
        }
      ]
    },
    {
      "title": "Redis Cache Hit Rate",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "redis_keyspace_hits_total / (redis_keyspace_hits_total + redis_keyspace_misses_total)",
          "legendFormat": "hit rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 0.7 },
              { "color": "green", "value": 0.9 }
            ]
          }
        }
      }
    },
    {
      "title": "Redis Memory Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 8 },
      "targets": [
        {
          "expr": "redis_memory_used_bytes",
          "legendFormat": "used"
        },
        {
          "expr": "redis_memory_max_bytes",
          "legendFormat": "max"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "bytes" }
      }
    },
    {
      "title": "DPP Operations Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "sum by (handler) (rate(http_requests_total{job=\"backend\", handler=~\".*/api/v1/dpps.*\"}[5m]))",
          "legendFormat": "{{ handler }}"
        }
      ]
    },
    {
      "title": "Backend Error Breakdown",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "sum by (status) (increase(http_requests_total{job=\"backend\", status=~\"[45]..\"}[1h]))",
          "legendFormat": "{{ status }}"
        }
      ]
    },
    {
      "title": "Active Workers",
      "type": "stat",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 16 },
      "targets": [
        {
          "expr": "uvicorn_workers_active",
          "legendFormat": "active"
        }
      ]
    }
  ],
