# Keycloak admin credentials (applied only on first boot)
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=change-me

# Optional: override host ports if defaults are occupied
# KEYCLOAK_HOST_PORT=8080
# BACKEND_HOST_PORT=8000

# Optional: allow additional Keycloak client IDs for API token validation
# KEYCLOAK_ALLOWED_CLIENT_IDS=dpp-backend,dpp-frontend

# Optional: Keycloak database overrides
# KEYCLOAK_DB_NAME=keycloak
# KEYCLOAK_DB_USERNAME=keycloak
# KEYCLOAK_DB_PASSWORD=keycloak_dev_password_2024

# Optional: GitHub token to avoid API rate limits when resolving IDTA templates
# IDTA_TEMPLATES_GITHUB_TOKEN=ghp_yourtokenhere

# Optional: Alertmanager webhook targets (used by infra/monitoring/alertmanager/alertmanager.yml)
# ALERTMANAGER_WEBHOOK_URL=https://alerts.example.com/default
# ALERTMANAGER_WEBHOOK_URL_CRITICAL=https://alerts.example.com/critical

# Optional: default base URI for global asset IDs
# GLOBAL_ASSET_ID_BASE_URI_DEFAULT=http://localhost:8000/asset/
